{# {%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %} #}
{% for post in postslist | reverse %}
<article class="vh100 break-after">
<h1 class="center text-error"> War Crime </h1>
<div class="row">
	<div class="col">
		<h2>{{ post.data.title }}</h2>
	</div>
</div>
<div class="row">
	<div class="col">
		{%- for tag in post.data.tags | filterTagList %}
		<h3>Violation of Article {{ tag }}</h3>
		{%- endfor %}
	</div>
</div>
<div class="row">
		<div class="col">
		<h4>{{ post.data.description }}, <time datetime="{{ post.data.date | htmlDateString }}">{{ post.data.date | readableDate }}</time></h4>
		<h4>{{ post.content | safe }}</h4>
	</div>
</div>
<aside>
	<h2>Call for a ceasefire now!</h2>
	<h3>#WarCrimesInPalestine</h3>
</aside>
</article>
{% endfor %}