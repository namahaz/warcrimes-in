{# {%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %} #}
{% for post in postslist | reverse %}
<article class="break-after bg-secondary">
	<div class="container">
		<h1 class="text-primary hide-xs hide-sm hide-md hide-lg text-uppercase">warcrimes.in</h1>
		<div class="row">
			<div class="col">
				<h2 class="text-capitalize">{{ post.data.title }}</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-10">
				<h4 class="text-error">International Criminal Court Article(s):</h4>
				<h3>
				{%- for tag in post.data.tags | filterTagList %}
					{{ tag }}<br />
				{%- endfor %}
				</h3><br/>
				<h4>{{ post.content | safe }}</h4>
				<ul class="hide-xs hide-pr">
				{%- for source in post.data.sources %}
					<li><a href="{{ source }}">{{ source }}</a></li>
				{%- endfor %}
				</ul>
			</div>
			<div class="col-2">
				<h4 class="text-capitalize text-error">{{post.data.tags[0]}}</h4> 
				<h2 class="hide-xs"><a href="{{ post.url }}"><time datetime="{{ post.data.date | htmlDateString }}">{{ post.data.date | readableDate("DD") }}</time></a></h3>
			</div>
		</div>
		{% include "calls.njk" %}
	</div>
</article>
{% endfor %}
