{# {%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %} #}
{% for post in postslist | reverse %}
<article class="is-full-screen break-after">
<h1 class="text-error hide-xs text-uppercase"> War Crime </h1>
<div class="row">
	<div class="col">
		<h2 class="text-capitalize">{{ post.data.title }}</h2>
	</div>
</div>
<div class="row">
	<div class="col-10">
		<h3>Article violation(s):<br/>
		{%- for tag in post.data.tags | filterTagList %}
			{{ tag }}<br />
		{%- endfor %}
		</h3><br/>
		<h4>{{ post.content | safe }}</h4>
		<ul>
		{%- for source in post.data.sources | filterTagList %}
			<li><a href="{{ source }}">{{ source }}</a></li>
		{%- endfor %}
		</ul>
	</div>
	<div class="col-2">
		<h2 class="hide-xs"><a href="{{ post.url }}"><time datetime="{{ post.data.date | htmlDateString }}">{{ post.data.date | readableDate("LLL yyyy") }}</time></a></h3>
	</div>
</div>
{% include "calls.njk" %}
</article>
{% endfor %}
